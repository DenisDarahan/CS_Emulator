<QueueBuilder>:
    result_table: table
    cpl_label: cpl
    queue_label: queue

    orientation: 'vertical'
    size: self.size

    ScrollView:
        size: self.size

        GridLayout:
            id: table
            padding: 30
            spacing: 20

            cols: 1
            rows: 1

            size:
                max(self.parent.size[0], 30 * 2 + 300 * self.cols + 20 * (self.cols - 1)), \
                max(self.parent.size[1], 30 * 2 + 100 * self.rows + 20 * (self.rows - 1))
            size_hint: None, None

            background_color: (0, 0, 0, 0)
            background_normal: ''

            canvas.before:
                Color:
                    rgba: (1, 1, 1, 1)
                Rectangle:
                    size: self.size
                    pos: self.pos

    BoxLayout:
        size_hint_y: 0.15
        padding: 50, 30
        spacing: 20
        orientation: 'vertical'

        background_color: (0, 0, 0, 0)
        background_normal: ''

        canvas.before:
            Color:
                rgba: (96/255, 96/255, 96/255, 1)
            Rectangle:
                size: self.size
                pos: self.pos

        BoxLayout:
            size_hint_y: 0.2

            Label:
                id: cpl
                text: 'Critical path length'
                font_size: 55

        BoxLayout:

            Label:
                id: queue
                font_size: 50
