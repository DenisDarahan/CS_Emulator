<AskGenerate>:
    nodes_min_weight: n_min_weight
    nodes_max_weight: n_max_weight
    nodes_number: nodes
    graph_correlation: correlation
    edges_min_weight: e_min_weight
    edges_max_weight: e_max_weight

    title: 'Graph params'
    title_size: 60

    size_hint: None, None
    size: 650, 350

    BoxLayout:
        orientation: 'vertical'
        padding: 10
        spacing: 10

        BoxLayout:
            padding: 5
            spacing: 5

            Label:
                text: 'Node weights:'
                font_size: 50

            BoxLayout:
                TextInput:
                    id: n_min_weight
                    input_type: 'number'
                    input_filter: 'int'
                    focus: True
                    font_size: 50
                    multiline: False
                    text: 'min'

                Label:
                    text: '-'
                    font_size: 50,
                    size_hint_x: 0.05

                TextInput:
                    id: n_max_weight
                    input_type: 'number'
                    input_filter: 'int'
                    focus: True
                    font_size: 50
                    multiline: False
                    text: 'max'

        BoxLayout:
            padding: 5
            spacing: 5

            Label:
                text: 'Nodes:'
                font_size: 50

            TextInput:
                id: nodes
                input_type: 'number'
                input_filter: 'int'
                focus: True
                font_size: 50
                multiline: False

        BoxLayout:
            padding: 5
            spacing: 5

            Label:
                text: 'Correlation:'
                font_size: 50

            TextInput:
                id: correlation
                input_type: 'number'
                input_filter: 'float'
                focus: True
                font_size: 50
                multiline: False

        BoxLayout:
            padding: 5
            spacing: 5

            Label:
                text: 'Edge weights:'
                font_size: 50

            BoxLayout:
                TextInput:
                    id: e_min_weight
                    input_type: 'number'
                    input_filter: 'int'
                    focus: True
                    font_size: 50
                    multiline: False
                    text: 'min'

                Label:
                    text: '-'
                    font_size: 50,
                    size_hint_x: 0.05

                TextInput:
                    id: e_max_weight
                    input_type: 'number'
                    input_filter: 'int'
                    focus: True
                    font_size: 50
                    multiline: False
                    text: 'max'

        Button:
            text: 'Generate'
            font_size: 50
            text_size: self.size
            halign: 'center'
            valign: 'middle'
            on_release: root.generate()
